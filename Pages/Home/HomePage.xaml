<!-- HomePage.xaml -->
<Page x:Class="DataGateWin.Pages.Home.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Loaded="HomePage_OnLoaded"
      Unloaded="HomePage_OnUnloaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <ui:TextBlock Grid.Row="0"
                      Text="Welcome to DataGate OpenVPN 3"
                      FontTypography="Title"
                      FontSize="20"
                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      FontWeight="SemiBold"/>

        <!-- Connection card -->
        <ui:Card Grid.Row="1" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Connection status"
                           FontWeight="SemiBold"/>

                <TextBlock x:Name="StatusText"
                           Grid.Row="1"
                           Margin="0,6,0,0"
                           Text="Idle"
                           Opacity="0.8"/>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="0,12,0,0">
                    <ui:Button x:Name="ConnectButton"
                               Appearance="Primary"
                               Content="Connect"
                               Width="160"
                               HorizontalAlignment="Left"
                               Click="ConnectButton_OnClick"/>

                    <ui:Button x:Name="DisconnectButton"
                               Margin="10,0,0,0"
                               Appearance="Secondary"
                               Content="Disconnect"
                               Width="160"
                               HorizontalAlignment="Left"
                               Click="DisconnectButton_OnClick"/>
                </StackPanel>
            </Grid>
        </ui:Card>

        <!-- Logs card -->
        <ui:Card Grid.Row="2" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Engine logs"
                           FontWeight="SemiBold"/>

                <TextBox x:Name="LogTextBox"
                         Grid.Row="1"
                         Margin="0,10,0,0"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </Grid>
        </ui:Card>
    </Grid>
</Page>

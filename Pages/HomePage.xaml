<Page x:Class="DataGateWin.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Welcome to DataGate OpenVPN 3"
                       FontSize="20"
                       FontWeight="SemiBold"/>

            <ui:Card Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Connection status" FontWeight="SemiBold"/>
                    <TextBlock Margin="0,6,0,0" Text="Not connected." Opacity="0.8"/>
                </StackPanel>
            </ui:Card>

            <ui:Button Margin="0,16,0,0"
                       Appearance="Primary"
                       Content="Connect"
                       Width="160"
                       HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Page>
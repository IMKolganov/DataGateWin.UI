<ui:FluentWindow x:Class="DataGateWin.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="DataGate OpenVPN 3"
                 Width="980"
                 Height="620"
                 WindowStartupLocation="CenterScreen"
                 WindowBackdropType="Mica"
                 ExtendsContentIntoTitleBar="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0"
                     Title="DataGate OpenVPN 3"
                     ShowClose="True"
                     ShowMinimize="True"
                     ShowMaximize="True" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="MenuColumn" Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left menu host -->
            <Border x:Name="MenuHost"
                    Grid.Column="0"
                    Padding="12,12,8,12">

                <ui:NavigationView x:Name="NavView"
                                   PaneDisplayMode="Left"
                                   IsBackButtonVisible="Collapsed"
                                   SelectionChanged="NavView_OnSelectionChanged"
                                   PaneOpened="NavView_OnPaneOpened"
                                   PaneClosed="NavView_OnPaneClosed">

                    <ui:NavigationView.MenuItems>
                        <ui:NavigationViewItem Content="Home" Tag="home" IsActive="True">
                            <ui:NavigationViewItem.Icon>
                                <ui:SymbolIcon Symbol="Home24"/>
                            </ui:NavigationViewItem.Icon>
                        </ui:NavigationViewItem>

                        <ui:NavigationViewItem Content="Access" Tag="access">
                            <ui:NavigationViewItem.Icon>
                                <ui:SymbolIcon Symbol="PlugConnected24"/>
                            </ui:NavigationViewItem.Icon>
                        </ui:NavigationViewItem>

                        <ui:NavigationViewItem Content="Statistics" Tag="statistics">
                            <ui:NavigationViewItem.Icon>
                                <ui:SymbolIcon Symbol="ShieldKeyhole24"/>
                            </ui:NavigationViewItem.Icon>
                        </ui:NavigationViewItem>

                        <ui:NavigationViewItemSeparator/>

                        <ui:NavigationViewItem Content="Settings" Tag="settings">
                            <ui:NavigationViewItem.Icon>
                                <ui:SymbolIcon Symbol="Settings24"/>
                            </ui:NavigationViewItem.Icon>
                        </ui:NavigationViewItem>
                    </ui:NavigationView.MenuItems>

                </ui:NavigationView>
            </Border>

            <!-- Right content -->
            <Border Grid.Column="1" Padding="8,12,12,12">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>

    </Grid>
</ui:FluentWindow>

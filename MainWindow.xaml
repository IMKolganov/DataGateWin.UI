<ui:FluentWindow x:Class="DataGateWin.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:pages="clr-namespace:DataGateWin.Pages"
                 Title="DataGate OpenVPN 3"
                 Width="980"
                 Height="620"
                 WindowStartupLocation="CenterScreen"
                 WindowBackdropType="Mica"
                 ExtendsContentIntoTitleBar="True">

    <Grid Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0"
                     Title="DataGate OpenVPN 3"
                     ShowClose="True"
                     ShowMinimize="True"
                     ShowMaximize="True"/>

        <!-- NavigationView is the ROOT layout now -->
        <ui:NavigationView x:Name="NavView"
                           Grid.Row="1"
                           PaneDisplayMode="Left"
                           IsBackButtonVisible="Collapsed"
                           IsPaneToggleVisible="True"
                           OpenPaneLength="280"
                           CompactPaneLength="56"
                           SelectionChanged="NavView_OnSelectionChanged"
                           Background="{DynamicResource ApplicationBackgroundBrush}">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home"
                                       Tag="home"
                                       IsActive="True"
                                       TargetPageType="{x:Type pages:HomePage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Access"
                                       Tag="access"
                                       TargetPageType="{x:Type pages:Access}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="PlugConnected24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Statistics"
                                       Tag="statistics"
                                       TargetPageType="{x:Type pages:Statistics}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="ShieldKeyhole24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItemSeparator/>

                <ui:NavigationViewItem Content="Settings"
                                       Tag="settings"
                                       TargetPageType="{x:Type pages:SettingsPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
